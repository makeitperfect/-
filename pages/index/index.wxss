/* pages/index/index.wxss */
.p0{
  background-color: rgb(82, 2, 71);
  height:30vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

}
text{
  font-family:  'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 18px;
  color: white;
  font-weight: 500;
}
image{
  float: left;
  width: 120rpx;
  height: 120rpx;
  background-color: white;
  border-radius: 10px;
  margin-right: 4px
}
.p1{
  flex-direction: row;
  margin: 5px;
  
}
.p2{
  display: flex;
  height: 120rpx;
  flex-direction: column;
  background-color: #aaa;
  border-radius: 10px;
  font-family:  'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
}
.add{
  position:fixed;
  left:35%;
  bottom: 0vh;
  height: 10vh;
  width:30%;
  background-color: rgb(4, 62, 107);
  border-radius: 20px;
  text-align: center
}
.main{
  height: 100vh;
  background-color: rgb(38, 2, 59)
}
.center{
  line-height:10vh;
}
.del{
  font-size: 300;
  height: 120rpx;
  float: right;
  background-color: rgb(109, 24, 71);
  color: white;
  margin-left: 4px;
  line-height:120rpx;
  border-radius: 10px;
}
.noInfo{
  margin-top: 10vh;
  text-align: center;
  color: white
}